<%- include('header'); -%>
        <div class="container-form">
            
            <h1> <%= today %> </h1>
            <h3> <%= listTittle %> </h3>
            <div class="box">
                
                <% newListItem.forEach( obj => { %>
                    <form action="/delete" method="post">
                        <div class="item">
                            <input type="checkbox" name="checkbox" value="<%= obj._id %>" onchange="this.form.submit()">
                            <p> <%= obj.name %> </p>
                        </div>
                    </form>
                <% }) %>
                
            </div>

            <form class="form" action="/" method="post">
                <input type="text" name="todoInput" id="todo-input" placeholder="Digite seu TODO">
                <button type="submit" name="button" value=<%= listTittle %>>Enviar</button>
            </form>
    
        </div>
<%- include ('footer') -%>
