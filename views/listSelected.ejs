<%- include('header'); -%>

    <div class="container-form">
                
        <h3> <%= listTittle %> </h3>
        
        <% items.forEach( (obj) => { %>
            <form action="/delete" method="post">
                <div class="item">

                    <input type="checkbox" name="items" value="<%= obj._id %>" onchange="this.form.submit()">
                    <a > <%= obj.name %> </a>
                    <input type="hidden" name="listName" value="<%= listTittle %>">
                </div>
            </form>
        <% }) %>

        <form class="form" action="/<%= listTittle %>" method="post">
            <input type="text" name="todoInput" id="todo-input" placeholder="Digite seu TODO">
            <button type="submit" name="button">Enviar</button>
        </form>

        <a href="/">
            <button type="click">Voltar</button>
        </a>

<%- include('footer'); -%>
